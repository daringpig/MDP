<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:paddingBottom="8dp"
              android:paddingTop="5dp"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="30">
        <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="80"
                android:textColor="@android:color/darker_gray"
                app:fontFamily="roboto"
                app:textWeight="bold"
                android:textSize="12sp"
                android:text="Accelerometer"
                android:id="@+id/twSensorType" android:gravity="center_vertical|right"
                android:paddingRight="2dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="3">

        <TextView
                android:id="@+id/device_card_header_divider"
                android:background="#DEDEDE"
                android:layout_width="1dp"
                android:layout_height="fill_parent" android:gravity="center_horizontal"
                android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70">
        <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="80"
                android:text="x=0.023   y=0.789   z=0.569"
                android:textColor="@android:color/darker_gray"
                app:fontFamily="roboto"
                app:textWeight="light"
                android:textSize="12sp"
                android:id="@+id/twValues" android:layout_gravity="center"
                android:textAlignment="center" android:gravity="center"/>
    </LinearLayout>
</LinearLayout>